        android:layout_marginLeft="@dimen/x44"
        android:layout_marginRight="@dimen/x44"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y38">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/message_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="短信验证码"
                android:imeActionLabel="登录"
                android:imeOptions="actionDone"
                android:paddingRight="@dimen/x2"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/y3"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/secondary_text"
                android:textSize="@dimen/x10" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/secondary_text" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_validate"
            android:text="获取验证码"
            android:gravity="center"
            android:textColor="@color/by_red_main"
            android:background="@drawable/selector_tv_register"
            android:layout_marginLeft="@dimen/x6"
            android:layout_marginBottom="@dimen/y12"
            android:layout_width="@dimen/x86"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y38"
